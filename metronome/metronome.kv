#:kivy 2.0.0

<MainLayout>:
    song_input: song_input
    artist_input: artist_input
    search_feedback: search_feedback
    bpm_input: bpm_input

    # Search song
    BoxLayout:
        orientation: "horizontal"
        spacing: '25dp'
        size_hint: 0.9, 0.2
        pos_hint: {"center_x": 0.52, "top": 1}
        
        BoxLayout:
            spacing: '35dp'
            
            MDTextField:
                id: song_input
                hint_text: "Song"
                mode: "rectangle"
                on_text_validate: root.on_search()
                write_tab: False
                focus: True
            MDTextField:
                id: artist_input
                hint_text: "Artist"
                mode: "rectangle"
                on_text_validate: root.on_search()
        
        MDFillRoundFlatButton:
            text: "Search"
            font_size: "18sp"
            on_press: root.on_search()
    
    # Search feedback
    MDLabel:
        size_hint: 0.8, 0.2
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
        id: search_feedback
        font_size: '15sp'
        text: "Try searching for a song"
        theme_text_color: "Hint"

    # Metronome
    PlayButton:
        bpm: root.bpm
        size_hint: None, None
        size: "150dp", "150dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
    
    # Display bpm
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.15
        pos_hint: {"center_x": 0.5, "center_y": 0.33}
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'center'
            TextInput:
                id: bpm_input
                text: str(root.bpm)
                on_text_validate: root.validate_bpm_input()
                on_focus: root.validate_bpm_input()
                input_filter: "int"
                multiline: False
                background_color: (0, 0, 0, 0)
                size_hint: 0.3, 0.5
                font_size: '30sp'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDLabel:
                text: "BPM"
                font_size: '30sp'
    
     # Change bpm
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 0.8, 0.1
        pos_hint: {"center_x": 0.5, "center_y": 0.25}
        spacing: '10dp'
        
        # Increase bpm by 1
        MDTextButton:
            text: "-"
            font_size: '60sp'
            pos_hint: {"center_y": 0.5}
            color: app.theme_cls.primary_color
            on_press: root.bpm -= 1 if root.bpm != root.min_bpm else 0
        
        MDSlider:
            size_hint_x: 0.8
            min: root.min_bpm
            max: root.max_bpm
            value: root.bpm
            step: 1
            hint: False
            show_off: False
            pos_hint: {"center_y": 0.5}
            on_value: root.bpm = self.value
        
        # Decrease bpm by 1
        MDTextButton:
            text: "+"
            font_size: '60sp'
            pos_hint: {"center_y": 0.5}
            color: app.theme_cls.primary_color
            on_press: root.bpm += 1 if root.bpm != root.max_bpm else 0
    
    # Display metadata
    BoxLayout:
        orientation: "vertical"
        pos_hint: {"center_y": 0.15, "center_x" : 0.5}
        size_hint_y: 0.12
        padding: '11dp', 0
        spacing: '20dp'
        opacity: 1 if root.show_metadata else 0
        
        # Seperating line
        Label:
            canvas:
                Color:
                    rgba: (0.85, 0.85, 0.85, 1)
                Rectangle:
                    pos: 0, self.y
                    size: root.width, 2
        # Song - Artist
        MDLabel:
            halign: "center"
            text: root.metadata["name"] + " - " + ", ".join(root.metadata["artists"])
        # Rest of the metadata
        MDLabel:
            halign: "center"
            text: "Duration: {}    Key: {}    Tempo: {}".format(root.metadata['duration'], root.metadata['key'], root.metadata['tempo'])
    
    # Spotify icon
    Image:
        source: "metronome/resources/powered_by_spotify.png"
        pos_hint: {"x": 0.01, "center_y": 0.03}
        size_hint: None, None
        size: "200dp", "100dp"
        allow_stretch: True
        keep_ratio: True
        